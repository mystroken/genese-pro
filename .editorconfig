# WordPress Coding Standards.
# https://make.wordpress.org/core/handbook/coding-standards/
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = tab
insert_final_newline = true
trim_trailing_whitespace = true

[*.{css,scss,js,json,html}]
indent_style = space
indent_size = 2

[*.md]
max_line_length = off
trim_trailing_whitespace = false

[*.txt]
end_of_line = crlf
